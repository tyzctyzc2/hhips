<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 

<hibernate-mapping>
   <class name = "db.SourceChapter" table = "sourcechapter">
      
      <meta attribute = "class-description">
         This class contains the employee detail. 
      </meta>
      
      <id name = "idsourcechapter" type = "int" column = "idsourcechapter">
         <generator class="native"/>
      </id>

      <property name = "sourcechaptername" column = "sourcechaptername" type = "string"/>
      <property name = "sourcechapterindex" column = "sourcechapterindex" type = "int"/>
      <property name = "sourceid" column = "sourceid" type = "int"/>
      
   </class>
</hibernate-mapping>